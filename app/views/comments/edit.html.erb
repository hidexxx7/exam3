<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<h2>コメント編集</h2><br>
<%= form_for(@comment, :url => topic_comment_path(@comment.topic_id, @comment.id)) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @comment.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :topic_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div><br>
  <%= link_to '戻る', topics_path %>
<% end %>
</div>
</div>
