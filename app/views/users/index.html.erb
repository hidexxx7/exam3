<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <% if user.id != current_user.id %>
          <li>
            <div class="item">
              <p>ユーザー名：<%= link_to user.name, user %></p>
              <p><%= profile_img(user) %></p>
              <p>Eメール：<%= user.email %></p>
            </div>
            <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
          </li>
        <% end %><!--DIVE19-1-->
      </div>
  <% end %>
</div>
