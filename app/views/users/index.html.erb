<div class="container">
  <h2>ユーザー一覧</h2>
  <table class="table table-bordered">
    <tr class="info"><th>ユーザー名</th><th>ユーザー画像</th><th>Eメール</th><th>メッセージ</th><th>フォロー状態</th></tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= profile_img(user) %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></td>
        <td><%= render partial: 'follow_form', locals: { user: user } if signed_in?   %></td>
      </tr>
    <% end %>
  </table>
</div>

